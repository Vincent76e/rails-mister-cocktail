<div class="container">
  <ul>
    <li>
      <h2>
        <%= @cocktail.name %>
        <%= link_to "✏️", edit_cocktail_path(@cocktail) %>
      </h2>
      <p>
        <% @cocktail.doses.each do |dose| %>
          <h3>Ingredients</h3>
          <ul>
            <li>
              <%= dose.ingredient.name %> -
              <%= dose.description %>
              <%= link_to "❌", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
            </li>
          </ul>
        <% end %>
      </p>
    </li>
  </ul>
  <%= link_to "🔙 homepage", cocktails_path %>
</div>


<div class="banner mb-4" style="background: radial-gradient(circle, rgba(174,238,229,1) 14%, rgba(148,187,233,1) 100%);">
  <div class="container">
    <h1>
      <%= @cocktail.name %>
      <%= link_to "✏️", edit_cocktail_path(@cocktail) %>
    </h1>
  </div>
</div>
